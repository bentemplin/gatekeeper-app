<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="me.ryanpetschek.gatekeeper.idFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtAddressLabel"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:ems="10"
        android:text="Address:"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Design.Snackbar.Message"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/txtPhoneLabel" />

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:ems="10"
        android:text="1021 Armistead St."
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.Design.Snackbar.Message"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/txtPhone" />

    <TextView
        android:id="@+id/txtOccupationLabel"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:ems="10"
        android:text="Occupation:"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Design.Snackbar.Message"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/txtAddressLabel" />

    <TextView
        android:id="@+id/txtOccupation"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:ems="10"
        android:text="Software Engineer"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.Design.Snackbar.Message"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/txtAddress" />

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="top"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/common_google_signin_btn_text_dark_disabled"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDateOfBirthLabel"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:ems="10"
        android:text="Date of Birth:"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Design.Snackbar.Message"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/txtOccupationLabel" />

    <TextView
        android:id="@+id/txtNameLabel"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:ems="10"
        android:text="Name:"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Design.Snackbar.Message"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/txtDateOfBirthLabel" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:ems="10"
        android:text="Rikesh Subedi"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.Design.Snackbar.Message"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/txtDateOfBirth" />

    <TextView
        android:id="@+id/txtDateOfBirth"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:ems="10"
        android:text="07/20/1998"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.Design.Snackbar.Message"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/txtOccupation" />

    <TextView
        android:id="@+id/txtPhone"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:ems="10"
        android:text="540-305-4391"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.Design.Snackbar.Message"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/txtPhoneLabel"
        android:layout_width="165dp"
        android:layout_height="40dp"
        android:ems="10"
        android:text="Phone Number:"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.Design.Snackbar.Message"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

</android.support.constraint.ConstraintLayout>
